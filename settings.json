{
    // Configuración específica para archivos Makefile
    "[makefile]": {
        "editor.insertSpaces": false, // Usar tabuladores en lugar de espacios
        "editor.tabSize": 4          // Tamaño del tabulador
    },

    // Configuración global (opcional)
    "editor.renderWhitespace": "all", // Mostrar caracteres invisibles (espacios, tabuladores, etc.)
    "files.associations": {
        "Makefile": "makefile"        // Asegurar que los archivos Makefile se detecten correctamente
    }
}